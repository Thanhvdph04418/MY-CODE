<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context="linearlayoutandroid.fpt.canhhh.calculator.MainActivity">

    <LinearLayout
        android:layout_weight="2"
        android:background="#424242"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_width="match_parent"
            android:gravity="right|bottom"
            android:layout_height="match_parent"
            android:textColor="#FAFAFA"
            android:textSize="45dp"
            android:text="2142342152"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:background="#9E9E9E"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="c"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="+/-"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="%"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:background="#ff9600"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="/"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:background="#BDBDBD"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="7"/>

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8"
            android:textSize="50dp"
            android:textStyle="bold" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="9"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:background="#ff9600"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="x"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:background="#BDBDBD"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="4"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="5"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="6"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:background="#ff9600"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:background="#BDBDBD"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="1"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="2"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3"
            android:textSize="50dp"
            android:textStyle="bold" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:background="#ff9600"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="+"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:background="#9E9E9E"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <Button
            android:layout_weight="2"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="0"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="."/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="50dp"
            android:background="#ff9600"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="="/>
    </LinearLayout>

</LinearLayout>
